<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageSender"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_offer_home"
            android:padding="12dp"
            android:tint="@color/white"
            android:src="@drawable/downcross"/>

        <TextView
            android:id="@+id/paidTo"
            android:layout_toEndOf="@+id/imageSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid to"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/date"
            android:layout_below="@+id/imageSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 December 2020 "
            android:textSize="10sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/light_black"
            android:paddingStart="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/poppinsregular"
            android:textSize="17sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black"
            android:gravity="center"/>

        <TextView
            android:id="@+id/walletTxt"
            android:layout_below="@+id/imageSender"
            android:layout_toStartOf="@+id/wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debited from  "
            android:textSize="10sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/black"
            android:gravity="center"/>

        <ImageView
            android:layout_below="@+id/imageSender"
            android:id="@+id/wallet"
            android:layout_width="10dp"
            android:layout_height="10sp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            android:tint="@color/colorPrimary"
            android:src="@drawable/wallet"/>

    </RelativeLayout>

</LinearLayout>